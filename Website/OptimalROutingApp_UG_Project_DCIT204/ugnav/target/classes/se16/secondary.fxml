<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se16.SecondaryController">
   <top>
      <VBox>
         <children>
            <!-- Header -->
            <HBox alignment="CENTER" style="-fx-background-color: #5E81AC; -fx-padding: 20;">
               <children>
                  <Label text="UG Navigate - Algorithm Demonstration" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            
            <!-- Algorithm Selection -->
            <VBox spacing="15.0" style="-fx-background-color: #ECEFF4; -fx-padding: 20;">
               <children>
                  <Label text="Algorithm Demonstration &amp; Performance Analysis" style="-fx-font-size: 16; -fx-font-weight: bold;" />
                  
                  <HBox spacing="20.0" alignment="CENTER_LEFT">
                     <children>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Algorithm:" style="-fx-font-weight: bold;" />
                              <ComboBox fx:id="algorithmComboBox" prefWidth="300.0" />
                           </children>
                        </VBox>
                        
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Demo Source:" style="-fx-font-weight: bold;" />
                              <ComboBox fx:id="demoSourceCombo" prefWidth="180.0" />
                           </children>
                        </VBox>
                        
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Demo Destination:" style="-fx-font-weight: bold;" />
                              <ComboBox fx:id="demoDestCombo" prefWidth="180.0" />
                           </children>
                        </VBox>
                        
                        <Button fx:id="runAlgorithmButton" onAction="#runAlgorithmDemo" text="Run Algorithm" 
                                style="-fx-background-color: #A3BE8C; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" />
                     </children>
                  </HBox>
                  
                  <!-- Performance Info -->
                  <HBox spacing="20.0" alignment="CENTER_LEFT">
                     <children>
                        <Label fx:id="performanceLabel" text="Ready to run algorithm..." 
                               style="-fx-font-size: 12; -fx-text-fill: #2E3440;" />
                        <Button onAction="#switchToPrimary" text="← Back to Navigation" 
                                style="-fx-background-color: #D08770; -fx-text-fill: white;" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </top>
   
   <center>
      <SplitPane dividerPositions="0.35" orientation="HORIZONTAL">
         <items>
            <!-- Left Panel: Algorithm Results -->
            <VBox spacing="10.0" style="-fx-padding: 15;">
               <children>
                  <Label text="Algorithm Results" style="-fx-font-size: 14; -fx-font-weight: bold;" />
                  <ListView fx:id="algorithmResultsList" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            
            <!-- Right Panel: Algorithm Details -->
            <VBox spacing="10.0" style="-fx-padding: 15;">
               <children>
                  <Label text="Algorithm Analysis &amp; Details" style="-fx-font-size: 14; -fx-font-weight: bold;" />
                  <TextArea fx:id="algorithmDetailsArea" wrapText="true" editable="false" VBox.vgrow="ALWAYS" 
                           style="-fx-font-family: 'Courier New', monospace; -fx-font-size: 11;" />
               </children>
            </VBox>
         </items>
      </SplitPane>
   </center>
   
   <bottom>
      <VBox>
         <children>
            <Separator />
            <HBox alignment="CENTER" spacing="10.0" style="-fx-padding: 15; -fx-background-color: #D8DEE9;">
               <children>
                  <Label text="This demonstration showcases various algorithms used in the UG Navigate system:" 
                         style="-fx-font-size: 11; -fx-text-fill: #2E3440;" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="30.0" style="-fx-padding: 10; -fx-background-color: #D8DEE9;">
               <children>
                  <Label text="• Dijkstra's Algorithm" style="-fx-font-size: 10;" />
                  <Label text="• A* Search" style="-fx-font-size: 10;" />
                  <Label text="• Sorting Algorithms" style="-fx-font-size: 10;" />
                  <Label text="• Vogel's Method" style="-fx-font-size: 10;" />
                  <Label text="• Critical Path Method" style="-fx-font-size: 10;" />
               </children>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se16.SecondaryController">
    <children>
        <Label text="Secondary View" />
        <Button fx:id="secondaryButton" text="Switch to Primary View" onAction="#switchToPrimary" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
