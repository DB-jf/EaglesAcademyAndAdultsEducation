{
    "name": "eaglesacademy/backend",
    "description": "Backend API for Eagles Academy and Adults Education",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "EaglesAcademy\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EaglesAcademy\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "serve": "php -S localhost:8000 -t public"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}